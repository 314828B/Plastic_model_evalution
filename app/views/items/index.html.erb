 <p id="notice"></p>
  <div class="container px-5 px-sm-0">

      <div class="row">
        <div class="col-md-3">
          <%= render 'customer/info',customer:@customer,item:@item %>
        </div>
            <div class="col-md-8 offset-md-1">
              <h2>Books</h2>
              <table class="table table-hover table-inverse">

              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
          <%= render 'items/index',item:@items %>

              <div class="comments">
              <p>コメント件数：<%= @item.comments.count %></p>
              <table class="table">
                <% @item.comments.each do |comment| %>
                  <tr>
                    <td><%= comment.customer.name %></td>
                    <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
                <% end %>
              </thead>
              </table>
            </div>
      </div>
  </div>